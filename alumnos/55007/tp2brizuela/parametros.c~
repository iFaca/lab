#include "histograma.h"


int parametros (char n, int h , char o , char ad){
	
	int valor=0;	

	switch (n){
		
		case 'n':
			printf("Numero de hijos %d\n", h);
		break;
	}
	
	switch (o){
	
		case 'o':
			if (ad=='a'){
				printf(" va de menor a mayor ");
				valor=0;
			}
			if (ad== 'd'){
				printf (" va de mayor a menor" );
				valor=1;
				}
		break;

	}
	return valor;


}
